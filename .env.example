# Required — wallet private key (with or without 0x prefix)
PRIVATE_KEY=

# Required — ACP entity ID for @reppodant
ACP_ENTITY_ID=

# Required — ACP wallet address
ACP_WALLET_ADDRESS=

# Required — Reppo API base URL
REPPO_API_URL=https://reppo.ai/api/v1

# Required — agent name for Reppo registration
REPPO_AGENT_NAME=reppodant

# Required — agent description for Reppo registration
REPPO_AGENT_DESCRIPTION=ACP agent that mints X posts as pods on Reppo

# Required — X API bearer token (app-only, read-only)
TWITTER_BEARER_TOKEN=

# Optional — Base RPC URL (defaults to public RPC)
RPC_URL=

# Optional — ACP polling interval in milliseconds (default: 10000)
POLL_INTERVAL_MS=10000

# Optional — set to "true" to use Base Sepolia testnet for ACP
ACP_TESTNET=false
